{
	"name": "snippetify",
	"displayName": "Snippetify",
	"description": "Fetch and save snippets",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Snippets",
		"Programming Languages"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "snippetify.snippet.save",
				"title": "Snippetify: Save selection",
				"icon": "$(save-as)"
			},
			{
				"command": "snippetify.snippet.search",
				"title": "Snippetify: Search snippets",
				"icon": "$(search)"
			},
			{
				"command": "snippetify.snippet.show",
				"title": "Snippetify: Show Snippet",
				"icon": "$(gist)"
			},
			{
				"command": "snippetify.webview.close_panel",
				"title": "Snippetify: Close Panel",
				"icon": "$(close)"
			},
			{
				"command": "snippetify.collection.all.add",
				"title": "Snippetify: Refresh collection",
				"icon": "$(add)"
			},
			{
				"command": "snippetify.collection.all.refresh",
				"title": "Snippetify: Add to collection",
				"icon": "$(refresh)"
			},
			{
				"command": "snippetify.collection.all.delete",
				"title": "Snippetify: Delete collection",
				"icon": "$(clear-all)"
			},
			{
				"command": "snippetify.collection.mine.refresh",
				"title": "Snippetify: Refresh my snippets",
				"icon": "$(refresh)"
			},
			{
				"command": "snippetify.collection.favorite.refresh",
				"title": "Snippetify: Refresh favorites snippets",
				"icon": "$(refresh)"
			},
			{
				"command": "snippetify.collection.recent.refresh",
				"title": "Snippetify: Refresh recently used",
				"icon": "$(refresh)"
			}
		],
		"keybindings": [
			{
				"command": "snippetify.snippet.save",
				"key": "ctrl+alt+s",
				"mac": "cmd+alt+s",
				"when": "editorHasSelection"
			},
			{
				"command": "snippetify.snippet.search",
				"key": "ctrl+alt+f",
				"mac": "cmd+alt+f",
				"when": "editorTextFocus"
			},
			{
				"command": "snippetify.webview.close_panel",
				"key": "ctrl+alt+c",
				"mac": "cmd+alt+c"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "snippetify.collection.all.add",
					"when": "view == snippet-collections",
					"group": "navigation"
				},
				{
					"command": "snippetify.collection.all.refresh",
					"when": "view == snippet-collections",
					"group": "navigation"
				},
				{
					"command": "snippetify.collection.mine.refresh",
					"when": "view == my-snippets",
					"group": "navigation"
				},
				{
					"command": "snippetify.collection.favorite.refresh",
					"when": "view == favorite-snippets",
					"group": "navigation"
				},
				{
					"command": "snippetify.collection.recent.refresh",
					"when": "view == recently-used",
					"group": "navigation"
				}
			],
			"editor/context": [
				{
					"command": "snippetify.snippet.save",
					"when": "editorHasSelection",
					"group": "Snippetify@1"
				},
				{
					"command": "snippetify.snippet.search",
					"when": "editorTextFocus",
					"group": "Snippetify@2"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "snippetify-collection",
					"title": "Snippetify",
					"icon": "media/icon.png"
				}
			]
		},
		"views": {
			"snippetify-collection": [
				{
					"id": "snippet-collections",
					"name": "Collections",
					"contextualTitle": "Snippet's collections"
				},
				{
					"id": "my-snippets",
					"name": "My snippets",
					"contextualTitle": "My Snippet"
				},
				{
					"id": "favorite-snippets",
					"name": "Favorite snippets",
					"contextualTitle": "My favorite Snippets"
				},
				{
					"id": "recently-used",
					"name": "Recently used",
					"contextualTitle": "Recent used snippets"
				}
			]
		},
		"configuration": {
			"title": "Snippetify",
			"properties": {
				"snippetify.token": {
					"type": "string",
					"scope": "application",
					"markdownDescription": "Your identification token. The link [Token](https://snippetify.com)"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"ts-loader": "^7.0.5",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.12"
	}
}
